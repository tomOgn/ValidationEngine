<?xml version="1.0" encoding="UTF-8"?>
<rule type='collect-and-check'>
    <name>Check Dates Format</name>
	<description>Each date has the same format dd/mm/yyyy</description>
    <target type='docx' file='document.xml'/>
    <collect-and-check>
        <!-- 
        d-m-yy | d-m-yyyy | dd-mm-yyyy | dd-mm-yy | 
        d.m.yy | d.m.yyyy | dd.mm.yyyy | dd.mm.yy |
        d/m/yy | d/m/yyyy | dd/mm/yyyy | dd/mm/yy
        -->
        <collect type='Regex'>(0?[1-9]|[12][0-9]|3[01])([-/.])(0?[1-9]|1[012])\2(19|20)?\d\d</collect>
        <!-- dd/mm/yyyy -->
        <check type='Regex'>(0[1-9]|[12][0-9]|3[01])(\/)(0[1-9]|1[012])(\/)(19|20)\d\d</check>
    </collect-and-check>
</rule>